<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             NavigationPage.HasNavigationBar="False"
             xmlns:buttons="clr-namespace:ElogictisMobile.Views.Buttons"
             x:Class="ElogictisMobile.Pages.ManagePage">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Horizontal"
                     BackgroundColor="LightBlue">
                <Entry Placeholder="Tìm kiếm theo mã đơn hàng"/>
                <ImageButton/>
            </StackLayout>
            <StackLayout>
                <buttons:BindableButton BindingContext="{Binding AddProductModel}" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
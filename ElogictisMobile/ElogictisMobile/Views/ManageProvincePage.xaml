<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ElogictisMobile.Views.ManageProvincePage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:button="clr-namespace:Syncfusion.XForms.Buttons;assembly=Syncfusion.Buttons.XForms"
    xmlns:core="clr-namespace:Syncfusion.XForms.Core;assembly=Syncfusion.Core.XForms"
    xmlns:svg="clr-namespace:ElogictisMobile.Controls"
    BackgroundColor="{StaticResource Gray-White}"
    NavigationPage.HasNavigationBar="True"
    NavigationPage.HasBackButton="True"
    Title="Danh mục tỉnh">

    <ContentPage.Content>

        <ScrollView>
            <Grid
            ColumnSpacing="0"
            RowDefinitions="Auto, Auto, *"
            RowSpacing="0">
                <StackLayout Orientation="Horizontal">
                    
                    <SearchBar x:Name="filterText" HeightRequest="40"
                               WidthRequest="300"
                            Placeholder="Nhập tên Tỉnh/Thành phố" Grid.Row="1"
                            TextChanged="SearchBar_TextChanged"/>
                    <button:SfButton
                    Margin="0,16,0,20"
                    Style="{StaticResource GradientButtonStyle}"
                    WidthRequest="80" 
                    Text="Thêm"
                    Command="{Binding AddProductCommand}"/>
                </StackLayout>
                
                <ListView Grid.Row="1" ItemsSource="{Binding ProvinceList}" SelectionMode="None"
                          HasUnevenRows="True" ItemTapped="ListView_ItemTapped">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <StackLayout Orientation="Vertical" Spacing="16" Padding="16">
                                    <StackLayout Orientation="Horizontal">
                                        <Label Text="Mã tỉnh: "
                                               FontSize="18"
                                               FontAttributes="Bold"/>
                                        <Label Text="{Binding Id}"
                                               FontSize="18"/>
                                    </StackLayout>
                                    <StackLayout Orientation="Horizontal">
                                        <Label Text="Tên tỉnh: "
                                               FontSize="18"
                                               FontAttributes="Bold"/>
                                        <Label Text="{Binding Name}"
                                               FontSize="18"/>
                                    </StackLayout>
                                </StackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </ScrollView>
    </ContentPage.Content>

</ContentPage>